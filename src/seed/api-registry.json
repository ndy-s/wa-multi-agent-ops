{
    "LNO9000A.SVC": {
        "description": "Loan Creation API. Create a test loan for a demo customer.",
        "fields": {
            "prdCode": {
                "required": true,
                "type": "string",
                "enum": [
                    "910100020001",
                    "910100020002",
                    "920200030001",
                    "920200030002",
                    "920200030099"
                ],
                "mapping": {
                    "QC-BASIC": "910100020001",
                    "QC-PLUS": "910100020002",
                    "KTA-BASIC": "920200030001",
                    "KTA-PLUS": "920200030002",
                    "KTA-SALARY": "920200030099"
                },
                "instructions": "Dummy product code for the selected simulated product."
            },
            "custNo": {
                "required": false,
                "type": "string",
                "instructions": "Customer reference number, 10 digits. System assigns placeholder ID if omitted."
            },
            "lonTerm": {
                "required": false,
                "type": "string",
                "enum": [
                    "6",
                    "12",
                    "18",
                    "24",
                    "36",
                    "48"
                ],
                "instructions": "Simulated loan term in months. Backend assigns default if omitted."
            },
            "repayPlan": {
                "required": false,
                "type": "string",
                "enum": [
                    "6",
                    "12",
                    "18",
                    "24",
                    "36",
                    "48"
                ],
                "instructions": "Repayment plan duration. Backend assigns default if omitted."
            },
            "limitAmt": {
                "required": false,
                "type": "string",
                "instructions": "Maximum allowable loan. BASIC ≤ 5,000,000; PLUS ≤ 75,000,000."
            },
            "riskSeg": {
                "required": false,
                "type": "string",
                "enum": [
                    "R1",
                    "R2",
                    "R3"
                ],
                "instructions": "Simulated risk segmentation."
            },
            "grade": {
                "required": false,
                "type": "string",
                "enum": [
                    "A",
                    "B",
                    "C",
                    "D",
                    "E"
                ],
                "instructions": "Customer scoring grade."
            },
            "groupCd": {
                "required": false,
                "type": "string",
                "instructions": "Fictional 3-digit region code. Defaults to 100."
            },
            "excludeStep": {
                "required": false,
                "type": "array",
                "enum": [
                    "PREP",
                    "PROC",
                    "CHECK"
                ],
                "instructions": "Steps to skip during simulated processing."
            }
        },
        "examples": [
            {
                "input": "Create a QC-PLUS test loan for customer 98765 with 12-month term and limit of 6,000,000.",
                "output": {
                    "id": "LNO9000A.SVC",
                    "params": {
                        "prdCode": "910100020002",
                        "custNo": "0000098765",
                        "lonTerm": "12",
                        "repayPlan": "12",
                        "limitAmt": "6000000"
                    }
                }
            }
        ]
    },
    "LNO9000B.SVC": {
        "description": "Portfolio simulation API (demo). Used for testing extensions and limit increases.",
        "fields": {
            "pgmType": {
                "required": true,
                "type": "string",
                "enum": [
                    "21",
                    "22",
                    "41",
                    "42",
                    "43"
                ],
                "mapping": {
                    "QC-EXTEND": "21",
                    "KTA-RENEW": "22",
                    "KTA-TOPUP": "41",
                    "KTA-LIMIT-UP": "42",
                    "QC-LIMIT-UP": "43"
                },
                "instructions": "Program code mapped from operation name (all fictional)."
            },
            "refNo": {
                "required": true,
                "type": "string",
                "instructions": "Simulated contract reference number, 16 digits, starting with '9900'."
            }
        },
        "examples": [
            {
                "input": "QC Limit Up request for contract 9900123412341234",
                "output": {
                    "id": "LNO9000B.SVC",
                    "params": {
                        "pgmType": "43",
                        "refNo": "9900123412341234"
                    }
                }
            }
        ]
    }
}


